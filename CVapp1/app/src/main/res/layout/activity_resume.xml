<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F4FF"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2F4FF">


    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/group_1"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="46dp">


        <ImageView
            android:id="@+id/rect2"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            android:contentDescription="rect2"
            android:src="@drawable/rectangle" />

        <ImageView
            android:id="@+id/rectangle_2_ek1"
            android:layout_width="132dp"
            android:layout_height="191dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="28dp"
            android:contentDescription="rectangle_2_ek1"
            android:src="@drawable/rectangle_2_ek1" />

        <TextView
            android:id="@+id/role"
            android:layout_width="146dp"
            android:layout_height="75dp"
            android:layout_marginLeft="149dp"
            android:layout_marginTop="30dp"
            android:text="Software\nEngineer"
            android:textColor="#797B7C"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/type"
            android:layout_width="146dp"
            android:layout_height="16dp"
            android:layout_marginLeft="149dp"
            android:layout_marginTop="110dp"
            android:text="Type"
            android:textColor="#797B7C"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/type2"
            android:layout_width="146dp"
            android:layout_height="20dp"
            android:layout_marginLeft="149dp"
            android:layout_marginTop="124dp"
            android:text="Senior Developer"
            android:textColor="#797B7C"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/period"
            android:layout_width="146dp"
            android:layout_height="16dp"
            android:layout_marginLeft="149dp"
            android:layout_marginTop="146dp"
            android:text="Joined"
            android:textColor="#797B7C"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/period2"
            android:layout_width="146dp"
            android:layout_height="20dp"
            android:layout_marginLeft="149dp"
            android:layout_marginTop="160dp"
            android:text="January 2021"
            android:textColor="#797B7C"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/experience"
            android:layout_width="146dp"
            android:layout_height="16dp"
            android:layout_marginLeft="149dp"
            android:layout_marginTop="182dp"
            android:text="Experience"
            android:textColor="#797B7C"
            android:textSize="10sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/exp2"
            android:layout_width="146dp"
            android:layout_height="20dp"
            android:layout_marginLeft="149dp"
            android:layout_marginTop="196dp"
            android:text="3 Years"
            android:textColor="#797B7C"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_2"
        android:layout_width="318dp"
        android:layout_height="59dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="46dp">

        <ImageView
            android:id="@+id/rect1"
            android:layout_width="318dp"
            android:layout_height="59dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="rect1"
            android:src="@drawable/rectangle" />

        <Button
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FFFF"
            android:text="About"
            android:textColor="#49C1F5"
            android:textSize="8sp" />

        <Button
            android:id="@+id/resume"
            android:layout_width="75dp"
            android:layout_height="39dp"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#49C1F5"
            android:text="Resume"
            android:textColor="#FFFF"
            android:textSize="8sp" />

        <Button
            android:id="@+id/contact"
            android:layout_width="90dp"
            android:layout_height="39dp"
            android:layout_marginLeft="212dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#FFFF"
            android:text="Contact"
            android:textColor="#49C1F5"
            android:textSize="8sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_3"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="46dp">

        <ImageView
            android:id="@+id/rectangleBg"
            android:layout_width="350dp"
            android:layout_height="270dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="rectangle_2_ek1"
            android:src="@drawable/rectangle" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="190dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="EXPERIENCE"
            android:textColor="#797B7C"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/heading2"
            android:layout_width="290dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="36dp"
            android:text="SEPTEMBER 2022 to DECEMBER 2022"
            android:textColor="#797B7C"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/heading3"
            android:layout_width="175dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="56dp"
            android:text="SENIOR DEVELOPER,"
            android:textColor="#797B7C"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/heading4"
            android:layout_width="195dp"
            android:layout_height="20dp"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="56dp"
            android:text="SAFARICOM"
            android:textColor="#797B7C"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text"
            android:layout_width="325dp"
            android:layout_height="215dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="85dp"
            android:text="During my attachment, I was recruited and trained at Safaricom PLC in the Software Engineering
department, I gained experience in teamwork, problem-solving methods, and key technical skills that
helped me improve my efficiency.
"
            android:textAlignment="viewStart"
            android:textColor="#797B7C"
            android:textSize="14sp"
            android:textStyle="normal" />


    </RelativeLayout>

</LinearLayout>